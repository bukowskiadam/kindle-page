<style>
  .status-bar {
    display: flex;
    font-size: 16px;
    font-weight: bold;
    padding: 2px 8px;
    box-sizing: border-box;
    line-height: 19px;
    background: var(--bg);
    color: var(--text-color);
    border-bottom: 1px solid var(--text-color-dim);
  }

  .time span {
    color: var(--text-color-dim);
  }

  .schedule {
    margin-left: auto;
    color: var(--text-color-dim);
  }

  .battery {
    margin-left: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .battery-icon {
    border: 3px solid var(--text-color);
    background: linear-gradient(90deg, var(--text-color) var(--battery), var(--bg) var(--battery));
    box-sizing: border-box;
    width: 32px;
    height: 15px;
    display: inline-block;
    clip-path: polygon(0 0, 90% 0, 90% 20%, 100% 20%, 100% 80%, 90% 80%, 90% 100%, 0 100%);
  }

  .battery-percentage {
    margin-left: 4px;
    width: 40px;
    text-align: right;
  }
</style>
<div class="status-bar">
  <div class="time">
    <span>Updated:</span>
    {{time}}
    <span>Next: {{nextRefreshTime}}</span>
  </div>
  <div class="schedule">Schedule: {{refreshSchedule}}</div>
  <div class="battery">
    <span class="battery-icon"></span>
    <span class="battery-percentage">{{ battery | default("-- ") }}%</span>
  </div>
</div>